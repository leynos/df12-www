# Example configuration values for OpenTofu
# Copy this file to `terraform.tfvars` and update the values as needed.

# Fully qualified domain for the website
domain_name = "www.example.com"

# Apex domain used for DNS records
root_domain = "example.com"

# AWS region where resources will be created
aws_region = "eu-west-2"

# Deployment environment
environment = "dev"

# Project identifier used for tagging resources (defaults to "df12-www")
project_name = "df12-www"

# GitHub organization or user that owns the repository
github_owner = "example"

# Name of the repository containing the site
github_repo = "site"

# Branch to deploy from
github_branch = "main"

# Personal access token for GitHub API operations
# Store real tokens securely (e.g. environment variables or a secrets manager).
github_token = "ghp_your_pat_here"

# Optional PEM-formatted private key for SSH-based git clones (leave commented to use PAT)
# github_ssh_private_key = <<-EOT
# -----BEGIN OPENSSH PRIVATE KEY-----
# ...
# -----END OPENSSH PRIVATE KEY-----
# EOT

# Optional known_hosts entries for GitHub SSH cloning
# github_known_hosts = <<-EOT
# github.com ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIOMqqnkWEbgxeqDR0QzkGrhfmUK7d1YfG0svJ+9syG5b
# EOT

# Local directory with site files relative to this repo
site_path = "public"

# Monthly cost limit that triggers alerts (GBP)
budget_limit_gbp = 5

# Email address to receive budget alerts
budget_email = "billing@example.com"

# Cloudflare API configuration for DNS management
# Store the real token securely (e.g. environment variables or a secrets manager).
cloudflare_api_token = "cf_api_token"

# Cloudflare zone ID for the managed domain (32 hex characters)
cloudflare_zone_id = "0123456789abcdef0123456789abcdef"

# Set to true if you want Cloudflare to proxy the CDN CNAME
cloudflare_proxied = false

# Cloud provider selection (aws or scaleway)
cloud_provider = "aws"

# Scaleway credentials (required when cloud_provider = "scaleway")
scaleway_access_key      = "scw_access_key"
scaleway_secret_key      = "scw_secret_key"
scaleway_project_id      = "11111111-2222-3333-4444-555555555555"
scaleway_organization_id = ""
scaleway_region          = "fr-par"
scaleway_zone            = "fr-par-1"

# Number of days to keep CloudFront logs
log_retention_days = 14
